/* styles.css  Hero Layout + Blue Palette */

* { margin: 0; padding: 0; box-sizing: border-box; }

:root {
  --primary-blue: #0066cc;
  --dark-blue: #004499;
  --light-blue: #e6f0ff;
  --text-dark: #1a1a1a;
  --text-light: #555;
  --border-light: #e0e0e0;
  --bg-light: #f9fafb;
  --white: #ffffff;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
  line-height: 1.6;
  color: var(--text-dark);
  background: var(--bg-light);
}

.container { max-width: 1000px; margin: 0 auto; padding: 0 1.5rem; }

/* Header / Nav */
.header {
  background: var(--white);
  border-bottom: 1px solid var(--border-light);
  padding: 1.25rem 0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 2rem;
}

.logo {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--text-dark);
}

.nav {
  display: flex;
  gap: 2rem;
  flex-wrap: wrap;
}

.nav a {
  color: var(--text-light);
  text-decoration: none;
  font-weight: 500;
  font-size: 0.95rem;
  transition: color 0.3s ease;
  position: relative;
}

.nav a::after {
  content: '';
  position: absolute;
  bottom: -4px;
  left: 0;
  width: 0;
  height: 2px;
  background: var(--primary-blue);
  transition: width 0.3s ease;
}

.nav a:hover {
  color: var(--primary-blue);
}

.nav a:hover::after {
  width: 100%;
}

/* Hero Section */
.hero {
  background: linear-gradient(135deg, var(--light-blue) 0%, rgba(0, 102, 204, 0.05) 100%);
  padding: 4rem 0;
  margin-bottom: 3rem;
}

.hero-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 3rem;
  align-items: center;
}

.hero-text h2 {
  font-size: 2.4rem;
  color: var(--text-dark);
  margin-bottom: 1rem;
  line-height: 1.2;
  font-weight: 700;
}

.hero-text p {
  font-size: 1.1rem;
  color: var(--text-light);
  margin-bottom: 1.75rem;
  line-height: 1.7;
}

.cta-button {
  display: inline-block;
  background: var(--primary-blue);
  color: var(--white);
  padding: 0.85rem 1.75rem;
  border-radius: 6px;
  text-decoration: none;
  font-weight: 600;
  transition: background 0.3s ease, transform 0.3s ease;
  border: 2px solid var(--primary-blue);
}

.cta-button:hover {
  background: var(--dark-blue);
  border-color: var(--dark-blue);
  transform: translateY(-2px);
}

.hero-image {
  position: relative;
  overflow: hidden;
  border-radius: 12px;
  box-shadow: 0 10px 40px rgba(0, 102, 204, 0.15);
}

.hero-image img {
  width: 100%;
  height: auto;
  display: block;
  transition: transform 0.3s ease;
}

.hero-image:hover img {
  transform: scale(1.05);
}

/* Sections */
.section {
  background: var(--white);
  padding: 3rem 2.5rem;
  margin-bottom: 2.5rem;
  border-radius: 8px;
  border-top: 4px solid var(--primary-blue);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
}

.section h2 {
  font-size: 1.8rem;
  margin-bottom: 2rem;
  color: var(--text-dark);
  font-weight: 700;
}

/* Skills Grid */
.skills-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(170px, 1fr));
  gap: 1.5rem;
}

.skill-card {
  padding: 1.5rem;
  background: var(--light-blue);
  border-radius: 8px;
  border-left: 4px solid var(--primary-blue);
  transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
  text-align: center;
}

.skill-card:hover {
  transform: translateY(-6px);
  background: rgba(0, 102, 204, 0.08);
  box-shadow: 0 6px 16px rgba(0, 102, 204, 0.12);
}

.skill-card h3 {
  color: var(--primary-blue);
  margin-bottom: 0.5rem;
  font-size: 1.1rem;
  font-weight: 600;
}

.skill-card p {
  color: var(--text-light);
  font-size: 0.9rem;
  line-height: 1.5;
}

/* Projects Grid */
.projects-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
}

.project-card {
  padding: 1.75rem;
  background: var(--white);
  border-radius: 8px;
  border: 1px solid var(--border-light);
  border-top: 4px solid var(--primary-blue);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  display: flex;
  flex-direction: column;
}

.project-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 10px 24px rgba(0, 102, 204, 0.15);
}

.project-header {
  border-bottom: 2px solid var(--light-blue);
  padding-bottom: 0.75rem;
  margin-bottom: 1rem;
}

.project-card h3 {
  color: var(--text-dark);
  font-size: 1.2rem;
  font-weight: 600;
  margin: 0;
}

.project-card p {
  color: var(--text-light);
  font-size: 0.95rem;
  margin-bottom: 1rem;
  flex-grow: 1;
}

.project-links {
  display: flex;
  gap: 1rem;
}

.project-links a {
  color: var(--primary-blue);
  text-decoration: none;
  font-weight: 500;
  font-size: 0.9rem;
  transition: color 0.3s ease;
}

.project-links a:hover {
  color: var(--dark-blue);
  text-decoration: underline;
}

/* Contact Section */
.contact-section {
  text-align: center;
  background: linear-gradient(135deg, var(--light-blue) 0%, rgba(0, 102, 204, 0.05) 100%);
}

.contact-section h2 {
  color: var(--text-dark);
}

.contact-section p {
  color: var(--text-light);
  margin-bottom: 1.5rem;
}

.contact-links {
  list-style: none;
  display: flex;
  gap: 2rem;
  justify-content: center;
  flex-wrap: wrap;
}

.contact-links a {
  color: var(--primary-blue);
  text-decoration: none;
  font-weight: 500;
  font-size: 1rem;
  transition: color 0.3s ease, transform 0.3s ease;
}

.contact-links a:hover {
  color: var(--dark-blue);
  transform: scale(1.1);
}

/* Footer */
.footer {
  background: var(--text-dark);
  color: var(--white);
  text-align: center;
  padding: 2rem 0;
  margin-top: 3rem;
}

.footer p {
  font-size: 0.9rem;
  opacity: 0.8;
}

/* Responsive */
@media (max-width: 768px) {
  .hero-container { grid-template-columns: 1fr; }
  .hero-text h2 { font-size: 1.8rem; }
  .header-top { flex-direction: column; align-items: flex-start; gap: 1rem; }
  .nav { gap: 1rem; }
  .section { padding: 2rem 1.5rem; }
  .skills-grid { grid-template-columns: repeat(2, 1fr); }
  .projects-grid { grid-template-columns: 1fr; }
}

@media (max-width: 480px) {
  .logo { font-size: 1.2rem; }
  .nav { gap: 0.75rem; font-size: 0.85rem; }
  .hero-text h2 { font-size: 1.4rem; }
  .hero-text p { font-size: 1rem; }
  .skills-grid { grid-template-columns: 1fr; }
  .contact-links { gap: 1rem; }
  .cta-button { padding: 0.7rem 1.4rem; font-size: 0.95rem; }
}
